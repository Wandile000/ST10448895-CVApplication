@model CV.Models.CvData
@{
    ViewData["Title"] = "About Me";
    ViewData["Description"] = $"Learn about {Model.FullName} — {Model.Location}. IT 3rd Year Student specializing in Java ,C# and ASP.NET Core.";
}

<section class="section">
    <div class="container">
        <div class="row align-items-center g-5 mb-5">

            <!-- Profile Photo -->
            <div class="col-md-3 text-center">
                <div class="profile-ring">
                    <img src="@Url.Content("~/images/profile.jpeg")"
                         alt="@Model.FullName"
                         class="profile-img"
                         onerror="this.onerror=null; this.src='https://placehold.co/200x200/161b22/58a6ff?text=Photo';" />
                </div>
            </div>

            <!-- Bio -->
            <div class="col-md-9">
                <h1 class="section-title">About Me</h1>
                <div class="section-divider"></div>
                <p class="mt-3" style="color: #8b949e; line-height: 1.9; font-size: 1.05rem;">
                    Hi! I'm <strong class="text-accent">@Model.FullName</strong>, an spiring Security Architect 
                    based in <strong style="color: var(--text);">@Model.Location</strong>.
                    @Model.Bio
                </p>
                <div class="mt-4 d-flex gap-3 flex-wrap">
                    <a href="@Url.Content("~/files/cv.pdf")" download class="btn-cv-primary">
                        <i class="bi bi-file-earmark-person"></i> Download Full CV
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="btn-cv-outline">
                        <i class="bi bi-envelope"></i> Get In Touch
                    </a>
                </div>
            </div>
        </div>

        <!-- Info Cards -->
        <div class="row g-3">
            <div class="col-md-4">
                <div class="info-card">
                    <span class="info-card-icon"><i class="bi bi-geo-alt-fill"></i></span>
                    <div>
                        <span class="info-card-label">Location</span>
                        <strong>@Model.Location</strong>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="info-card">
                    <span class="info-card-icon"><i class="bi bi-envelope-fill"></i></span>
                    <div>
                        <span class="info-card-label">Email</span>
                        <strong>@Model.Email</strong>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="info-card">
                    <span class="info-card-icon"><i class="bi bi-briefcase-fill"></i></span>
                    <div>
                        <span class="info-card-label">Status</span>
                        <strong>Open to Opportunities</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>