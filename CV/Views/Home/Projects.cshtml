@model CV.Models.CvData
@{
    ViewData["Title"] = "Projects";
    ViewData["Description"] = $"Portfolio projects by {Model.FullName} — real-world software built with C# and more.";
}

<section class="section">
    <div class="container">

        <h1 class="section-title">Projects</h1>
        <div class="section-divider"></div>
        <p class="section-subtitle">Things I've built — real code, real problems solved</p>

        <div class="row g-4">
            @foreach (var project in Model.Projects)
            {
                <div class="col-md-6">
                    <div class="cv-card">

                        <!-- Card Header -->
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <span class="project-icon"><i class="bi bi-folder2-open"></i></span>
                            <div class="d-flex gap-3">
                                @if (!string.IsNullOrWhiteSpace(project.GitHubUrl))
                                {
                                    <a href="@project.GitHubUrl" target="_blank" class="project-link">
                                        <i class="bi bi-github"></i> Code
                                    </a>
                                }
                                @if (!string.IsNullOrWhiteSpace(project.DemoUrl))
                                {
                                    <a href="@project.DemoUrl" target="_blank" class="project-link">
                                        <i class="bi bi-box-arrow-up-right"></i> Demo
                                    </a>
                                }
                            </div>
                        </div>

                        <!-- Title & Description -->
                        <h5 class="fw-semibold mb-2" style="font-size: 1rem;">@project.Title</h5>
                        <p style="color: var(--muted); font-size: 0.88rem; line-height: 1.75;">
                            @project.Description
                        </p>

                        <!-- Tech Tags -->
                        <div class="mt-3">
                            @foreach (var tag in project.Tags)
                            {
                                <span class="project-tag">@tag</span>
                            }
                        </div>

                    </div>
                </div>
            }
        </div>

    </div>
</section>