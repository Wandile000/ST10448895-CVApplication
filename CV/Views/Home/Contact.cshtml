@model CV.Models.CvData
@{
    ViewData["Title"] = "Contact";
    ViewData["Description"] = $"Get in touch with {Model.FullName} — open to new opportunities.";
}

<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">

                <h1 class="section-title text-center">Get In Touch</h1>
                <div class="section-divider mx-auto"></div>
                <p class="mt-3 mb-4 text-center" style="color: var(--muted); line-height: 1.8;">
                    I'm currently open to new opportunities feel free to reach out.
                </p>

                <a href="mailto:@Model.Email" class="contact-link">
                    <span class="contact-link-icon"><i class="bi bi-envelope-fill"></i></span>
                    <div>
                        <span class="contact-link-sub">Email</span>
                        <strong>@Model.Email</strong>
                    </div>
                </a>

                <a href="@Model.LinkedInUrl" target="_blank" class="contact-link">
                    <span class="contact-link-icon"><i class="bi bi-linkedin"></i></span>
                    <div>
                        <span class="contact-link-sub">LinkedIn</span>
                        <strong>@Model.LinkedInUrl.Replace("https://", "")</strong>
                    </div>
                </a>

                <a href="@Model.GitHubUrl" target="_blank" class="contact-link">
                    <span class="contact-link-icon"><i class="bi bi-github"></i></span>
                    <div>
                        <span class="contact-link-sub">GitHub</span>
                        <strong>@Model.GitHubUrl.Replace("https://", "")</strong>
                    </div>
                </a>

                <div class="text-center mt-4">
                    <a href="~/files/cv.pdf" download class="btn-cv-primary">
                        <i class="bi bi-file-earmark-arrow-down"></i> Download My CV
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>