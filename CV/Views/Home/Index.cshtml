@model CV.Models.CvData
@{
    ViewData["Title"] = "Home";
    ViewData["Description"] = $"{Model.FullName} — {Model.Title}. Final-Year IT Student.";
}

<!--HERO -->
<section class="hero">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-7">

                <span class="hero-tag"> Final-Year IT Student · Aspiring CyberSecurity Architect </span>

                <h1 class="hero-name">
                    Hi, I'm <span class="text-accent">@Model.FullName</span>
                </h1>

                <p class="hero-subtitle">@Model.Title</p>

                <p class="hero-bio">@Model.Bio</p>

                <div class="d-flex flex-wrap gap-3 mb-4">
                    <a asp-controller="Home" asp-action="Projects" class="btn-cv-primary">
                        <i class="bi bi-folder2-open"></i> View Projects
                    </a>
                    <a href="~/files/cv.pdf" download class="btn-cv-outline">
                        <i class="bi bi-download"></i> Download CV
                    </a>
                </div>

                <div class="d-flex gap-2 flex-wrap">
                    <a href="@Model.GitHubUrl" target="_blank" class="btn-cv-outline btn-cv-sm">
                        <i class="bi bi-github"></i> GitHub
                    </a>
                    <a href="@Model.LinkedInUrl" target="_blank" class="btn-cv-outline btn-cv-sm">
                        <i class="bi bi-linkedin"></i> LinkedIn
                    </a>
                    <a asp-controller="Home" asp-action="Contact" class="btn-cv-outline btn-cv-sm">
                        <i class="bi bi-envelope"></i> Contact Me
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>

<!--STATS -->
<section class="section-alt">
    <div class="container">
        <div class="row g-3 justify-content-center">
            <div class="col-6 col-sm-3">
                <div class="stat-card">
                    <div class="stat-number">@Model.YearsCoding+</div>
                    <div class="stat-label">Years Coding</div>
                </div>
            </div>
            <div class="col-6 col-sm-3">
                <div class="stat-card">
                    <div class="stat-number">@Model.ProjectsBuilt+</div>
                    <div class="stat-label">Projects Built</div>
                </div>
            </div>
            <div class="col-6 col-sm-3">
                <div class="stat-card">
                    <div class="stat-number">@Model.TechCount+</div>
                    <div class="stat-label">Technologies</div>
                </div>
            </div>
        </div>
    </div>
</section>