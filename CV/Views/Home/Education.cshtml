@model CV.Models.CvData
@{
    ViewData["Title"] = "Education";
    ViewData["Description"] = $"{Model.FullName}'s education and certifications.";
}

<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-7">

                <h1 class="section-title">Education</h1>
                <div class="section-divider"></div>
                <p class="section-subtitle">Academic background and certifications</p>

                <div class="timeline">
                    @foreach (var item in Model.Education)
                    {
                        <div class="timeline-item">
                            <div class="timeline-date">@item.DateRange</div>
                            <div class="timeline-degree">@item.Degree</div>
                            <div class="timeline-inst">@item.Institution</div>
                            <p style="color: var(--muted); font-size: 0.88rem; line-height: 1.75;">
                                @item.Description
                            </p>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</section>